@model IEnumerable<WebHomework_2.Models.Photo>
@{
    ViewBag.Title = "Home Page";
    int i = 0;
}

<div class="container">
    
    @foreach (var item in Model)
    {
        <div class="mySlides">
            <div class="numbertext">@item.Description</div>
            <img src="@item.ImagePath" >
        </div>
    }

    <!-- Next and previous buttons -->
    <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
    <a class="next" onclick="plusSlides(1)">&#10095;</a>

    <!-- Thumbnail images -->
    <div class="row">
        
        @foreach (var item in Model)
        {   
            <div class="column">
                <img class="demo cursor" src="@item.ImagePath" style="width:100%" onclick="currentSlide(@(++i))" >
            </div>
        }
    </div>
</div>
